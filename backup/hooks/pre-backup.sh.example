#!/bin/bash
# ============================================
# PRE-BACKUP HOOK
# ============================================
# Runs before backup starts.
# Use this to stop services that need consistent state.
#
# Copy to /opt/swizzin/backup/hooks/pre-backup.sh

set -euo pipefail

log() {
    echo "[pre-backup] $(date '+%Y-%m-%d %H:%M:%S') $*"
}

# Uncomment to stop services before backup for consistent DB state
# Note: Most apps handle this gracefully, only needed for problematic apps

# log "Stopping services for consistent backup..."
# systemctl stop sonarr || true
# systemctl stop radarr || true

log "Pre-backup hook completed"
