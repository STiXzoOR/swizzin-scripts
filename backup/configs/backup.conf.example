# ============================================
# SWIZZIN BACKUP CONFIGURATION
# ============================================
# Copy this file to /opt/swizzin/backup/backup.conf

# --- Restic Encryption ---
RESTIC_PASSWORD_FILE="/root/.swizzin-backup-password"

# --- Google Drive (via rclone) ---
GDRIVE_ENABLED="yes"
GDRIVE_REMOTE="gdrive:swizzin-backups"

# --- Windows Server / Remote SFTP ---
SFTP_ENABLED="yes"
SFTP_HOST=""
SFTP_USER="backup"
SFTP_PORT="22"
SFTP_PATH="/C:/Backups/swizzin"
SFTP_KEY="/root/.ssh/id_rsa"

# --- Retention Policy (GFS) ---
KEEP_DAILY=7
KEEP_WEEKLY=4
KEEP_MONTHLY=3

# --- Notifications (Pushover) ---
PUSHOVER_ENABLED="yes"
PUSHOVER_USER_KEY=""
PUSHOVER_API_TOKEN=""
PUSHOVER_PRIORITY="0"

# --- Backup Schedule ---
BACKUP_HOUR="03"
BACKUP_MINUTE="00"

# --- App Handling ---
EXCLUDE_APPS=""
MEDIASERVER_MODE="config_only"

# --- Extra Paths ---
EXTRA_PATHS=""

# --- Advanced ---
PARALLEL_UPLOADS=4
LOG_FILE="/var/log/swizzin-backup.log"
MANIFEST_DIR="/opt/swizzin/backup/manifests"
